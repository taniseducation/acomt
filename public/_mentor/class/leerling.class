<?PHP
class Leerling {
  public $naam;
  public $laag;
  public $klas;
  public $laagVariabele;
  public $laagVolgNummer;
  public $klasVariabele;

  function __construct($naam,$laag,$laagVariabele,$laagVolgNummer,$klas,$klasVariabele,$klasVolgNummer) {
    $this->naam = $naam;
    $this->laag = $laag;
    $this->laagVariabele = $laagVariabele;
    $this->laagVolgNummer = $laagVolgNummer;
    $this->klas = $klas;
    $this->klasVariabele = $klasVariabele;
    $this->klasVolgNummer = $klasVolgNummer;
    $this->vakkenPakket = [];
    $this->beoordeling = [];
  }
  function voegBeoordelingToe($vak,$rij) {
      array_push($this->vakkenPakket,$vak);
      $this->beoordeling[$vak]=$rij;
  }
  function get_naam() {
    return $this->naam;
  }
  function get_klas() {
    return $this->klas;
  }
  function get_laag() {
    return $this->laag;
  }
  function get_laagVolgNummer() {
    return $this->laagVolgNummer;
  }
  function toon_beoordelingen() {
      $nr = 0;
      foreach ($this->beoordeling as $b) {
          echo $this->vakkenPakket[$nr].': ';
          echo $b['D'].' | '.$b['E'].' | '.$b['F'].' | '.$b['G'];
          echo '<br>';
          $nr++;
      }
  }
}
?>